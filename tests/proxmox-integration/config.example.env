# Proxmox Integration Tests Configuration
# Copy this file to config.env and fill in your values

# Proxmox Configuration
export PROXMOX_HOST="proxmox.example.com"
export PROXMOX_USERNAME="root@pam"
export PROXMOX_PASSWORD="your-secure-password"
export PROXMOX_PORT="8006"
export PROXMOX_NODE="proxmox-node1"
export PROXMOX_STORAGE="local"
export PROXMOX_BRIDGE="vmbr0"
export PROXMOX_TEMPLATE_ID="1000"
export PROXMOX_VERIFY_SSL="false"

# Kubernetes Configuration
export K8S_ENDPOINT="k8s-api.example.com:6443"
export K8S_JOIN_TOKEN="your-join-token"
export K8S_CA_CERT_HASH="sha256:your-ca-cert-hash"
export KUBECONFIG="/path/to/your/kubeconfig"

# Test Configuration
export TEST_NAMESPACE="proxmox-test"
export TEST_TIMEOUT="600"
export EXPECTED_NODE_NAME="proxmox-worker"
export PROXMOX_WORKER_CHART="./packages/system/proxmox-worker"
export WORKER_RELEASE_NAME="proxmox-worker-test"

# CSI Configuration
export CSI_STORAGE_CLASS="proxmox-csi"
export CSI_NAMESPACE="kube-system"
export CSI_TEST_NAMESPACE="csi-test"
export CSI_TEST_SIZE="1Gi"

# Monitoring Configuration
export MONITORING_NAMESPACE="monitoring"
export PROMETHEUS_ENDPOINT="http://prometheus.example.com:9090"
export GRAFANA_ENDPOINT="http://grafana.example.com:3000"
export ENABLE_EXTERNAL_MONITORING_TESTS="false"
export MONITORING_TEST_TIMEOUT="60"

# Network Configuration
export NETWORK_POLICY_NAMESPACE="kube-system"
export NETWORK_TEST_NAMESPACE="network-test"
export CNI_PROVIDER="cilium"
export NETWORK_POLICY_ENABLED="true"
export NETWORK_TEST_TIMEOUT="60"

# E2E Configuration
export E2E_TEST_NAMESPACE="e2e-test"
export E2E_TEST_TIMEOUT="600"
export E2E_ENABLE_STORAGE="true"
export E2E_ENABLE_NETWORK="true"
export E2E_ENABLE_MONITORING="true"
export E2E_CLEANUP_ON_FAILURE="true"

# Debug Configuration
export DEBUG_MODE="false"
export VERBOSE_LOGS="false"
export KEEP_TEST_RESOURCES="false"
